<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
<% include ./partials/head %>
<% include ./partials/header %>
<script src="/javascript/ticketListController.js"></script>
<style>
body{
  background-color: #D5D4D2;
  overflow: scroll;
  color:white;
}
.tenant{
  background-color: #BB2436

}

</style>
<body ng-app="TicketList" ng-controller="TicketListController"background="http://www.modafinilsale.com/data/out/727/233440814-grey-wood.jpg">
  <h1 style="text-align:center; padding-top:100px; font-size:40px;text-shadow: 2px 2px 2px #000;" class="lead">Parking Lot</h1>
<div align="center" style="padding-right:20px; padding-bottom:20px;">
  <a style="text-align:center; max-width: 400px; background-color:#bd2132" href="/tickets/addticket" class="btn btn-danger">Create A New Ticket</a>
</div>

<div align="center">
<div class="panel" style="max-width:1000px; text-align:center;">
  <span class="list-group" ng-repeat="ticket in tickets">
    <a id= "tenant" href="/tickets/viewticketinformation/?id={{ticket._id}}" class="list-group-item list-group-item-action flex-column align-items-start" ng-show="checkIfTenent(ticket)" style= "background-color:#BB2436; color:#FFFFFF">
      <h2 style="text-align: center; font-size:40px;" class="lead">#{{ticket.id}} {{ ticket.tickettitle }}</h2>
      <small style="text-align: center;" class="lead">Priority: {{ ticket.prioritylevel }}</small><br>
      <small style="text-align: center;" class="lead">Assigned To: {{ ticket.assignedto }}</small>
    </a>
  </span>
<span class="list-group" ng-repeat="ticket in tickets">
  <a href="/tickets/viewticketinformation/?id={{ticket._id}}" class="list-group-item list-group-item-action flex-column align-items-start" ng-show="checkIfCompleted(ticket)">
    <h2 style="text-align: center; font-size:40px;" class="lead">#{{ticket.id}} {{ ticket.tickettitle }}</h2>
    <small style="text-align: center;" class="lead">Priority: {{ ticket.prioritylevel }}</small><br>
    <small style="text-align: center;" class="lead">Assigned To: {{ ticket.assignedto }}</small>
  </a>
</span>

</div>

</div>

</body>
<% include ./partials/footer %>
